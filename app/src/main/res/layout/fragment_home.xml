<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- App Title -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LAUNDRYGO"
        android:textColor="#8D011C"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp" />

    <!-- Notification Bell -->
    <ImageView
        android:id="@+id/bell"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_margin="16dp"
        android:src="@drawable/bell"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp" />

    <!-- User Profile Icon -->
    <ImageView
        android:id="@+id/user"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_margin="16dp"
        android:src="@drawable/profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/bell"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp" />

    <!-- Buttons Wrapper -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:padding="10dp">

        <!-- Wash Button -->
        <LinearLayout
            android:id="@+id/button1"
            android:layout_width="340dp"
            android:layout_height="138dp"
            android:background="@drawable/matcha2"
            android:clickable="true"
            android:elevation="6dp"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="137dp"
                android:layout_height="103dp"
                android:src="@drawable/washing" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WASH"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Hand Wash Button -->
        <LinearLayout
            android:id="@+id/button3"
            android:layout_width="340dp"
            android:layout_height="138dp"
            android:background="@drawable/matcha2"
            android:clickable="true"
            android:elevation="6dp"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="133dp"
                android:layout_height="104dp"
                android:src="@drawable/handwash" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HANDWASH"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Wash, Dry, and Fold Button -->
        <LinearLayout
            android:id="@+id/button4"
            android:layout_width="340dp"
            android:layout_height="138dp"
            android:background="@drawable/matcha2"
            android:clickable="true"
            android:elevation="6dp"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="137dp"
                android:layout_height="103dp"
                android:src="@drawable/washing2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WASH, DRY and FOLD"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Fold Button -->
        <LinearLayout
            android:id="@+id/button2"
            android:layout_width="340dp"
            android:layout_height="138dp"
            android:background="@drawable/matcha2"
            android:clickable="true"
            android:elevation="6dp"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="133dp"
                android:layout_height="104dp"
                android:src="@drawable/shirt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="FOLD"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
